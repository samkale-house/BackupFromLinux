@model EditRoleVM
@{ViewBag.Title="Edit Role";}

<h3>Edit Role</h3>
<form method="post" class="mt-3">
            
            <div class="form-group row">
                <label asp-for="Id"></label>
                <input asp-for="Id" disabled class="form-control" />
            </div>
            <div class="form-group row">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <button type="submit" class="btn btn-primary">Edit Role</button>
                <a asp-action="ShowAllRoles" class="btn btn-primary">Cancel</a>
            </div>

            <div class="card">
                <div class="card-header">Users for Role @Model.RoleName</div>
                <div class="card-body">
                    @if(Model.users.Count>0)
                    {
                    @foreach (var user in Model.users)
                    {
                        <h5>@user</h5>
                    }
                    }
                    else
                    {
                        <h5>No users under this role.</h5>
                    }
                </div>
                <div class="card-footer">
    <a asp-controller="Administration" asp-action="EditUsersInRole"
       asp-route-roleId="@Model.Id" class="btn btn-primary">
        Add or remove users from this role
    </a>
</div>
            </div>
</form>
        