
@model LoginViewModel
@{ViewBag.Title = "Log In";}
<div class="row" style="padding-top:50px; padding-left:100px;padding-right:100px;" >
    <div class="col-md-6">   
        <h1> Log In</h1>    
        <hr/>     
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-checkbox"></div>
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" class="form-control" />
                    @Html.DisplayNameFor(m=>m.RememberMe)
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
        
    
 <div class="col-sm-6">
 <h1>External Logins</h1>
    <hr/>
        @{  if(Model.ExternalLoginSchemes!=null)
            {if( Model.ExternalLoginSchemes.Count>0)
            {
                
                    <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                <div>
                   @foreach (var provider in Model.ExternalLoginSchemes)
                     {
                     <button type="submit" class="btn btn-block btn-primary"
                      name="provider" value="@provider.Name">    
                      Login with @provider.DisplayName
                     </button>
                     }
                </div>
                    </form>
                
            }
            else{
                <div>No external login added.</div>
            }}
        }
        
    </div>

</div>
